{
  "manifest_version": 2,

  "name": "Chrome Navigation",
  "description": "An extension to browse google chrome handsfree",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "speechtotext.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "background.js" ]
    }
      ],
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}
